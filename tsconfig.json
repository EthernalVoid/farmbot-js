{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "outDir": "./dist",
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "typings",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
